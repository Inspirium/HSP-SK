{
  "name": "Inspirium/HSP",
  "description": "Hollistic Solutions for Publishers",
  "keywords": ["framework", "laravel"],
  "license": "GPLv3",
  "type": "project",
  "require": {
    "php": ">=7.0.0",
    "doctrine/dbal": "^2.6",
    "dompdf/dompdf": "^0.8.1",
    "guzzlehttp/guzzle": "^6.3",
    "intervention/image": "^2.4",
    "intervention/imagecache": "^2.3",
    "laravel/framework": "5.5.*",
    "laravel/passport": "^2.0",
    "laravel/tinker": "~1.0",
    "php-unoconv/php-unoconv": "~0.2",
    "phpoffice/phpspreadsheet": "dev-develop",
    "phpoffice/phpword": "v0.13.*",
    "pusher/pusher-php-server": "~3.0",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "barryvdh/laravel-ide-helper": "^2.3",
    "fzaninotto/faker": "~1.4",
    "jeroen-g/laravel-packager": "^1.5",
    "laravel/dusk": "^2.0",
    "laravel/homestead": "^5.1",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~6.0",
    "vimeo/psalm": "^0"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
            "Inspirium\\TaskManagement\\": "packages/Inspirium/TaskManagement/src",
            "Inspirium\\BookProposition\\": "packages/Inspirium/BookProposition/src",
            "Inspirium\\SKTemplate\\": "packages/Inspirium/SKTemplate/src",
      "Inspirium\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
            "Inspirium\\TaskManagement\\": "packages/Inspirium/TaskManagement/src",
            "Inspirium\\BookProposition\\": "packages/Inspirium/BookProposition/src",
            "Inspirium\\SKTemplate\\": "packages/Inspirium/SKTemplate/src",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan optimize"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  }
}
